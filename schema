CREATE TABLE applications (
    id INT AUTO_INCREMENT PRIMARY KEY,
    first_name VARCHAR(255),
    last_name VARCHAR(255),
    telephone VARCHAR(20),
    gender ENUM('Male', 'Female'),
    course_selection ENUM('CS/MIS', 'Math', 'Both'),
    cv VARCHAR(255),
    cover_letter VARCHAR(255),
    transcript VARCHAR(255),
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);




CREATE TABLE course_preferences (
    id INT AUTO_INCREMENT PRIMARY KEY,
    application_id INT,
    course_name VARCHAR(255),
    preference ENUM('Interested and have prior experience', 'Interested but no prior experience', 'Not preferred but able to teach', 'Not interested and not able to teach'),
    FOREIGN KEY (application_id) REFERENCES applications(id) ON DELETE CASCADE
);

CREATE TABLE comments (
    id INT AUTO_INCREMENT PRIMARY KEY,
    application_id INT,
    rating INT CHECK (rating BETWEEN 1 AND 5),
    interest_prompt ENUM('Yes', 'No') NOT NULL,
    comment TEXT,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (application_id) REFERENCES applications(id) ON DELETE CASCADE
);